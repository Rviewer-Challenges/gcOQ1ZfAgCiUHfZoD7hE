<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemoryGame.Views.MainPage"
             xmlns:vm="clr-namespace:MemoryGame.ViewModels"
             x:DataType="vm:MainPageViewModel"
             
             NavigationPage.HasNavigationBar="False"
             
             Title="{Binding Title}">

    <ScrollView Padding="40">
        <Grid RowDefinitions="*,auto,auto,auto,auto,*">

            <Label  Grid.Row="1" Text="Chooise a Level" HorizontalOptions="Center" FontSize="Title" FontAttributes="Bold"/>
            
            <Frame Grid.Row="2">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="EASY"/>
                </StackLayout>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavToMemoryGamePageCommand}" CommandParameter="1"/>
                </Frame.GestureRecognizers>
            </Frame>

            <Frame Grid.Row="3">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="MEDIUM"/>
                </StackLayout>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavToMemoryGamePageCommand}" CommandParameter="2"/>
                </Frame.GestureRecognizers>
            </Frame>
            
            <Frame Grid.Row="4">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="HARD" />
                </StackLayout>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavToMemoryGamePageCommand}" CommandParameter="3"/>
                </Frame.GestureRecognizers>
            </Frame>
        </Grid>
    </ScrollView>

</ContentPage>